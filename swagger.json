      "get" : {
        "tags" : [ "DestinyService" ],
        "description" : "Returns Destiny account information for the supplied membership.\n",
        "parameters" : [ {
          "$ref" : "#/parameters/BungieNetApiKey"
        }, {
          "$ref" : "#/parameters/MembershipType"
        }, {
          "$ref" : "#/parameters/DestinyMembershipId"
        }, {
