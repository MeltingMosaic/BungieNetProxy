      "required" : false,
      "type" : "integer",
      "minimum" : 1
    },
    "Page" : {
      "name" : "page",
      "in" : "query",
      "description" : "The page of data to get. Starts at 1",
      "required" : false,
      "type" : "integer",
      "minimum" : 1
    },
    "ActivityMode" : {
      "name" : "mode",
      "in" : "query",
      "description" : "The type of activity",
      "required" : true,
      "type" : "string",
