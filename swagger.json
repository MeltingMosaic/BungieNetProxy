      "required" : true,
      "type" : "string"
    },
    "OAuthAuthorization" : {
      "name" : "Authorization",
      "in" : "header",
      "description" : "OAuth 2 token",
      "required" : true,
      "type" : "string"
    },
    "MembershipType" : {
      "name" : "membershipType",
      "in" : "path",
      "description" : "XBL(1) or PSN(2)",
      "required" : true,
      "type" : "integer",
      "enum" : [ 1, 2 ],
      "format" : "int32"
    },
    "GetDefinitions" : {
      "name" : "definitions",
